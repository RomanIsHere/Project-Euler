#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main() {
    int limit = 4000000;
    int n = 35;
    int i;
    int first = 0;
    int second = 1;
    int next;
    int sumEven = 0;

    for (i = 0; i < n; i++) {
        if (i <= 1) {
            next = i;
        }
        else {
            next = first + second;
            first = second;
            second = next;
        }
        if (next != 0 && next % 2 == 0 && next <= limit) {
            sumEven = sumEven + next;
        }
        printf("%d\n", next);
    }
    printf("This is sum %d", sumEven);
  return 0;
}
